
@{
    ViewBag.Title = "学生信息管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{

}

<el-row v-loading.fullscreen.lock="fullscreenLoading">
    <el-col>
        <el-form ref="form" :inline="true" :model="formQuery" label-width="50px">
            <el-form-item label="账号" prop="code_q">
                <el-input v-model="formQuery.code_q"></el-input>
            </el-form-item>
            <el-form-item label="姓名" prop="name_q">
                <el-input v-model="formQuery.name_q"></el-input>
            </el-form-item>
            <el-form-item>
                <el-button type="primary" @@click="queryUser">查询</el-button>
                <el-button @@click="addUser">新增</el-button>
            </el-form-item>
        </el-form>
    </el-col>
    <el-col>
        <el-table :data="tableData3" height="400px" border style="width: 100%">
            <el-table-column prop="code" label="账号" width="100">
            </el-table-column>
            <el-table-column prop="name" label="姓名" width="100">
            </el-table-column>
            <el-table-column prop="sex" label="性别" width="100">
            </el-table-column>
            <el-table-column prop="type" label="类别">
            </el-table-column>
            <el-table-column fixed="right" label="操作" width="160">
                <template slot-scope="scope">
                    <el-button @@click="handleClick(scope.row,'edit')" type="primary" plain size="small">编辑</el-button>
                    <el-button @@click="handleClick(scope.row,'delete')" type="danger" plain size="small">删除</el-button>
                </template>
            </el-table-column>
        </el-table>
        <el-pagination background layout="prev, pager, next" :total="totalNum" :page-size="pageSize" :current-page="currentPage"
                       @@current-change="handleCurrentChanged">
        </el-pagination>
    </el-col>
</el-row>



<el-dialog :title="dialogTitle" :visible.sync="dialogFormVisible">
    <el-form ref="form" :model="form" :rules="rules" label-width="80px">
        <el-form-item label="账号" prop="code">
            <el-input v-model="form.code" :disabled="editMode"></el-input>
        </el-form-item>
        <el-form-item label="姓名" prop="name">
            <el-input v-model="form.name"></el-input>
        </el-form-item>
        <el-form-item label="密码" prop="pwd">
            <el-input type="password" v-model="form.pwd"></el-input>
        </el-form-item>
        <el-form-item label="性别">
            <el-radio-group v-model="form.sex">
                <el-radio label="1" border>男</el-radio>
                <el-radio label="2" border>女</el-radio>
            </el-radio-group>
        </el-form-item>
        <el-form-item label="年级" prop="name">
            <el-input v-model="form.grade"></el-input>
        </el-form-item>
        <el-form-item label="专业" prop="name">
            <el-input v-model="form.major"></el-input>
        </el-form-item>
        <el-form-item label="类别" prop="type">
            <el-select v-model="form.type" placeholder="请选择类别">
                <el-option label="管理员" value="1"></el-option>
                <el-option label="其他" value="2"></el-option>
            </el-select>
        </el-form-item>
        <el-form-item>
            <el-button type="primary" @@click="onSubmit('form')">保存</el-button>
            <el-button @@click="dialogFormVisible=false">取消</el-button>
        </el-form-item>
    </el-form>
</el-dialog>

@section Scripts{
<script>
    new Vue({
        el: '#app',
        data() {
            return {
                tableData3: [],
                totalNum: 100,
                pageSize: 10,
                currentPage: 4,
                dialogFormVisible: false,
                dialogTitle: "新增用户",
                editMode: false,
                fullscreenLoading: false,
                form: {
                    name: '',
                    code: '',
                    sex: '1',
                    pwd: '',
                    type: '',
                    grade: '',
                    major: ''
                },
                formQuery: {
                    name_q: '',
                    code_q: ''
                },
                rules: {
                    code: [{
                        required: true,
                        message: '请输入账号',
                        trigger: 'blur'
                    }],
                    name: [{
                        required: true,
                        message: '请输入姓名',
                        trigger: 'blur'
                    }],
                    pwd: [{
                        required: true,
                        message: '请输入密码',
                        trigger: 'blur'
                    }],
                    type: [{
                        required: true,
                        message: '请选择类别',
                        trigger: 'blur'
                    }]
                }
            }
        },
        methods: {
            queryUser() {
                this.fullscreenLoading = true;
                setTimeout(() => {
                    this.fullscreenLoading = false;
                }, 2000);
            },
            addUser() {
                this.editMode = false;
                this.dialogTitle = "新增用户";
                this.dialogFormVisible = true;
                this.form = {
                    name: '',
                    code: '',
                    sex: '1',
                    pwd: '',
                    type: '',
                    grade: '',
                    major: ''
                };
            },
            onSubmit(formName) {
                this.$refs[formName].validate((valid) => {
                    if (valid) {
                        this.fullscreenLoading = true;
                        var url = "/DoActon";
                        var data = this.form;
                        if (this.editMode) {
                            data.action = "editUser";
                        } else {
                            data.action = "addUser";
                        }
                        this.$http.post(url, data).then(res => {
                            console.info(res);
                            this.$message({
                                message: '保存成功',
                                type: 'success'
                            });
                            this.getData(this.currentPage, this.pageSize);
                            this.dialogFormVisible = false;
                            this.fullscreenLoading = false;
                        }, err => {
                            this.fullscreenLoading = false;
                            console.error(err);
                            this.$message.error('请求异常');
                        });
                    } else {
                        return false;
                    }
                });
            },
            resetSubmit(formName) {
                this.$refs[formName].resetFields();
            },
            handleCurrentChanged(val) {
                this.currentPage = val;
                this.getData(this.currentPage, this.pageSize);
            },
            getData(pageIndex, pageSize) {
                console.info(pageIndex + " " + pageSize);
                this.tableData3 = [{
                    code: '0001',
                    name: '王小虎',
                    sex: '1',
                    sex_n: '男',
                    pwd: '123456',
                    type_n: '管理员',
                    type: '1',
                    major: 'ces1',
                    grade: '123'
                }, {
                    code: '0001',
                    name: '王小虎',
                    sex: '1',
                    sex_n: '男',
                    pwd: '123456',
                    type_n: '管理员',
                    type: '1',
                    major: 'ces1',
                    grade: '123'
                }, {
                    code: '0001',
                    name: '王小虎',
                    sex: '1',
                    sex_n: '男',
                    pwd: '123456',
                    type_n: '管理员',
                    type: '1',
                    major: 'ces1',
                    grade: '123'
                }, {
                    code: '0001',
                    name: '王小虎',
                    sex: '1',
                    sex_n: '男',
                    pwd: '123456',
                    type_n: '管理员',
                    type: '1',
                    major: 'ces1',
                    grade: '123'
                }, {
                    code: '0001',
                    name: '王小虎',
                    sex: '1',
                    sex_n: '男',
                    pwd: '123456',
                    type_n: '管理员',
                    type: '1',
                    major: 'ces1',
                    grade: '123'
                }];
            },
            handleClick(row, mode) {
                var code = row.code;
                if (mode == "edit") {
                    this.editMode = true;
                    this.dialogFormVisible = true;
                    this.dialogTitle = "修改用户";
                    //TODO 获取用户信息
                    this.form = row;
                } else {
                    this.$confirm('此操作将永久删除用户信息, 是否继续?', '提示', {
                        confirmButtonText: '确定',
                        cancelButtonText: '取消',
                        type: 'warning'
                    }).then(() => {
                        this.fullscreenLoading = true;
                        var url = "/DoAction";
                        var data = {
                            code: code
                        };
                        this.$http.post(url, data).then(res => {
                            console.info(res);
                            this.$message({
                                type: 'success',
                                message: '删除成功!'
                            });
                            this.getData(this.currentPage, this.pageSize);
                            this.fullscreenLoading = false;
                        }, err => {
                            this.fullscreenLoading = false;
                            console.error(err);
                            this.$message.error('请求异常');
                        });
                    }).catch(() => {
                        this.$message({
                            type: 'info',
                            message: '已取消删除'
                        });
                    });
                }
            }
        },
        created() {
            this.fullscreenLoading = true;
            this.getData(1, this.pageSize);

            setTimeout(() => {
                this.fullscreenLoading = false;
            }, 2000);
        }
    });
</script>
}